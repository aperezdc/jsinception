#include "css.in"

#define JSCONF #E10079
#define JSCONF_DARKER #990052
#define JSCONF_FAINT #E1C6D5
#define JSCONF_US_BG #F0DB4F
#define JSCONF_US_FG #323330
#define JSCONF_US_HI #B3371A
#define JSCONF_US_BG_FAINT #FFFCE6

$impress {
	font-family: Overpass, sans-serif;
	color: #323330;
}

h1, h2, h3 {
	color: JSCONF;
	line-height: 80%;
	padding-bottom: 0;
	margin-bottom: 15px;
}

a {
	color: JSCONF_DARKER;
	text-decoration: none;
	transition (0.5s);
}

a:hover {
	color: #000;
	text-shadow: 0px 2px 3px rgba(0, 0, 0, 0.35);
}

code, pre, tt {
	font-family: CamingoCode, monoOne, monospace;
}

table, table td, table th, table tr {
	padding: 0;
	margin: 0;
}

$impress table {
	margin: 50px auto;
	line-height: 30%;
	border-top: 1px solid JSCONF_US_FG;
	border-bottom: 1px solid JSCONF_US_FG;
}

$impress table tr:nth-child(even) td {
	background-color: JSCONF_US_BG_FAINT;
}

$impress table th {
	color: JSCONF_US_FG;
	background-color: JSCONF_US_BG;
}

$impress table td {
	border-top: 1px solid JSCONF_US_FG;
}

$impress table th,
$impress table td {
	padding: 0 50px;
}

$impress table.align-data-right td {
	text-align: right;
}

$impress table.align-data-right.legend-first-column td:first-child {
	text-align: left;
	font-weight: bold;
}

$impress div.footnote {
	bottom: 0;
	font-size: 65%;
}

$impress a.footnoteref {
	vertical-align: super;
	font-size: 50%;
}

$impress div.footnote a.footnotereturn {
	float: left;
	display: block;
	margin-right: 0.5em;
	border-top: 1px solid JSCONF_DARKER;
	padding-right: 70px;
	margin-right: -60px;
}

div.step {
	opacity: 0.25;
	transition (opacity 0.5s linear);
	font-size: 200%;
}

.reveal {
	opacity: 0;
	transition: opacity 0.25s linear 0.5s;
}
div.step.present .reveal,
div.step.past .reveal {
	opacity: 1;
}

h1$kloc {
	text-align: center;
}

.centerbox {
	text-align: center;
	color: JSCONF_US_FG;
	background-color: JSCONF_US_BG;
	border-radius: 7px;
	padding: 1em;
}

div.step.pre-title {
	opacity: 0.1;
}

div.step.title {
	opacity: 0;
}

div.step.present,
div.step.active {
	opacity: 1;
}

div.step.noborder {
	border: none;
}

div.jslogo {
	width: 360px;
	height: 340px;
	color: #fff;
	background-color: #E10079;
}

div.jslogo > div.jstext {
	position: absolute;
	left: 110px;
	bottom: -15px;
	font-family: 'Overpass', 'Futura Md BT', sans-serif;
	line-height: 200px;
	font-weight: bold;
	font-size: 200px;
}

div.jslogo-right {
	position: absolute;
	left: 400px;
	top: 180px;
	font-size: 100px;
	font-weight: bold;
	color: #e10079;
	line-height: 80px;
}

div.jslogo-right > div {
	font-size: 40px;
	font-weight: normal;
	color: #323330;
}

div.jslogo-right > a {
	display: block;
	font-size: 30px;
	line-height: 110%;
	font-weight: normal;
}

div.jslogo.bigger {
	height: 780px;
	width: 780px;
}

div.jslogo.bigger > div.jstext {
	font-size: 480px;
	line-height: 480px;
	left: 200px;
	bottom: -30px;
}

div.jslogo.bigger > div.jslogo {
	position: absolute;
	top: -10px;
	left: -10px;
	border: 10px solid #fff;
}

div.jslogo.bigger > div.js-in {
	position: absolute;
	top: 160px;
	left: 400px;
	width: 200px;
	height: 200px;
	text-align: center;
	border-radius: 100px;
	background-color: rgba(255, 255, 255, 0.65);
	color: #E10079;
	font-size: 170px;
	line-height: 200px;
	text-align: center;
}
