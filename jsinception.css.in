#include "css.in"

#define JSCONF #E10079
#define JSCONF_DARKER #990052
#define JSCONF_FAINT #E1C6D5
#define JSCONF_US_BG #F0DB4F
#define JSCONF_US_FG #323330
#define JSCONF_US_HI #B3371A
#define JSCONF_US_BG_FAINT #FFFCE6
#define SHADOW_COLOR rgba(0, 0, 0, 0.25)
#define JOKE_COLOR #aaa

body {
	font-family: Overpass, Lato, sans-serif;
	color: JSCONF_US_FG;
	font-feature-settings: "kern" on, "liga" on;
	font-kerning: normal;
}

dd {
	line-height: 120%;
}
dd p {
	margin: 0;
}

h1, h2, h3 {
	color: JSCONF;
	line-height: 80%;
	padding-bottom: 0;
	margin-bottom: 15px;
}

a {
	color: JSCONF_DARKER;
	text-decoration: none;
	transition (0.5s);
}

a:hover {
	color: #000;
	text-shadow: 0px 2px 3px rgba(0, 0, 0, 0.35);
}

code, pre, tt {
	font-family: CamingoCode, monoOne, monospace;
}

code.small,
pre.small {
	font-size: 65%;
}

table, table td, table th, table tr {
	padding: 0;
	margin: 0;
}

div.step.credits dt,
div.step.credits dd {
	font-size: 80%;
}

div.step.credits dd {
	line-height: 100%;
	font-size: 60%;
}

dt {
	margin-top: 0.5em;
	color: JSCONF;
}

$impress table {
	margin: 50px auto;
	line-height: 30%;
	border-top: 1px solid JSCONF_US_FG;
	border-bottom: 1px solid JSCONF_US_FG;
}

$impress table tr:nth-child(even) td {
	background-color: JSCONF_US_BG_FAINT;
}

$impress table th {
	color: JSCONF_US_FG;
	background-color: JSCONF_US_BG;
}

$impress table td {
	border-top: 1px solid JSCONF_US_FG;
}

$impress table th,
$impress table td {
	padding: 0 50px;
}

$impress table.align-data-right td {
	text-align: right;
}

$impress table.align-data-right.legend-first-column td:first-child {
	text-align: left;
	font-weight: bold;
}

$impress div.footnote {
	bottom: 0;
	font-size: 65%;
}

$impress a.footnoteref {
	vertical-align: super;
	font-size: 50%;
}

$impress div.footnote a.footnotereturn {
	float: left;
	display: block;
	margin-right: 0.5em;
	border-top: 1px solid JSCONF_DARKER;
	padding-right: 70px;
	margin-right: -60px;
}

div.step {
	opacity: 0.25;
	transition (opacity 0.5s linear);
	font-size: 200%;
}

.reveal {
	opacity: 0;
	transition: opacity 0.25s linear 0.5s;
}
div.step.present .reveal,
div.step.past .reveal {
	opacity: 1;
}

$kloc {
	text-align: center;
}

.center {
	text-align: center;
}

.centerbox {
	text-align: center;
	color: JSCONF_US_FG;
	background-color: JSCONF_US_BG;
	border-radius: 7px;
	padding: 1em;
}

body.impress-on-step-2 div.step.pre-title,
body.impress-on-step-1 div.step.title {
	opacity: 0;
}

div.step.present,
div.step.active {
	opacity: 1;
}

div.step.noborder {
	border: none;
}

div.jslogo {
	width: 360px;
	height: 340px;
	color: #fff;
	background-color: #E10079;
}

$logos-plus,
$igalia-logo,
$avatar,
$finland {
	position: absolute;
	border: 3px solid #fff;
	box_shadow (0 3px 5px 2px SHADOW_COLOR);
}

$avatar,
$finland {
	width: 360px;
	height: 360px;
	border_radius (180px);
}

$avatar {
	background: url(images/avatar.jpg) 50% 50%;
	background-size: 360px 360px;
}

$avatar a {
	font-size: 85%;
	position: absolute;
	left: 80px;
	bottom: -60px;
	width: 200px;
	display: block;
	text-align: center;
}

div.step.present $avatar {
	animation (avatar-slides 20s infinite);
}

keyframes (avatar-slides,
	0% { }
	33% { 
		background: url(images/avatar2.jpg) 50% 50%;
		background-size: 360px 360px;
	}
	66% {
		background: url(images/avatar3.jpg) 50% 50%;
		background-size: 360px 360px;
	}
	100% { }
)

$finland {
	top: 0;
	left: 400px;
	background: url(images/finland.jpg) 50% 50%;
	background-size: 540px 360px;
}

div.step.present $finland {
	animation (finland-slides 40s infinite);
}

keyframes (finland-slides,
	0% { }
	25% {
		background-position: 100% 100%;
		background-size: 640px 427px;
	}
	50% {
		background: url(images/finland2.jpg) 30% 0;
		background-size: 640px 426px;
	}
	75% {
		background: url(images/finland3.jpg) 20% 100%;
		background-size: 704px 527px;
	}
	100% { }
)

$igalia-logo {
	left: 280px;
	top: 260px;
	top: 20px;
	background: #fff url(images/logo-igalia.png) 0 0 no-repeat;
	width: 200px;
	height: 64px;
	border_radius (32px);
}

$bloomberg-logo {
	position: absolute;
	background: #fff url(images/logo-bloomberg.svg) 50% 50% no-repeat;
	background-size: 90% 90%;
	top: -65px;
	left: 255px;
	width: 250px;
	height: 50px;
	opacity: 0;
	border_radius (25px);
	transition (opacity 1s linear 2s);
}

$logos-plus {
	background: JSCONF;
	font-size: 40px;
	color: #fff;
	height: 40px;
	width: 40px;
	overflow: hidden;
	top: -12px;
	left: 360px;
	text-align: center;
	line-height: 40px;
	font-weight: bold;
	border: none;
	opacity: 0;
	border_radius (22px);
	box_shadow (none);
	transition (opacity 1s linear 2s);
}

div.step.present $logos-plus,
div.step.present $bloomberg-logo {
	opacity: 1;
}

$v8-logo {
	position: absolute;
	background: url(images/logo-v8.svg) 50% 50% no-repeat;
	background-size: 75% 75%;
	height: 360px;
	width: 360px;
	top: -390px;
	left: 205px;
}

$ex-parrot {
	background: url(images/exparrot.gif) 50% 50% no-repeat;
	width: 350px;
	height: 380px;
	position: absolute;
	left: -360px;
	top: 200px;
	z-index: -1;
	opacity: 0;
	transition (opacity 1s ease-in);
}

div.step.present $ex-parrot {
	opacity: 1;
}

$ex-parrot div {
	color: JOKE_COLOR;
	text-align: center;
	font-size: 20px;
	position: absolute;
	bottom: 0;
	left: 10px;
	font-family: 'Oswald Regular', 'League Gothic', sans-serif;
	font-style: italic;
}

div.jslogo > div.jstext {
	position: absolute;
	left: 110px;
	bottom: -15px;
	font-family: 'Overpass', 'Futura Md BT', sans-serif;
	line-height: 200px;
	font-weight: bold;
	font-size: 200px;
}

div.jslogo-right {
	position: absolute;
	left: 400px;
	top: 180px;
	font-size: 100px;
	font-weight: bold;
	color: #e10079;
	line-height: 80px;
}

div.jslogo-right > div {
	font-size: 40px;
	font-weight: normal;
	color: #323330;
}

div.jslogo-right > a {
	display: block;
	font-size: 30px;
	line-height: 110%;
	font-weight: normal;
}

div.jslogo.bigger {
	height: 780px;
	width: 780px;
}

div.jslogo.bigger > div.jstext {
	font-size: 480px;
	line-height: 480px;
	left: 200px;
	bottom: -30px;
}

div.jslogo.bigger > div.jslogo {
	position: absolute;
	top: -10px;
	left: -10px;
	border: 10px solid #fff;
}

div.jslogo.bigger > div.js-in {
	position: absolute;
	top: 160px;
	left: 400px;
	width: 200px;
	height: 200px;
	text-align: center;
	border_radius (100px);
	background-color: rgba(255, 255, 255, 0.65);
	color: JSCONF;
	font-size: 170px;
	line-height: 200px;
	text-align: center;
}

div.demotime {
	background: #fff url(images/breakingbad.gif);
	width: 800px;
	height: 579px;
	text-align: center;
	margin: 0 auto;
}

div.demotime.beatles {
	background: #fff url(images/beatles.gif) 50% 50% no-repeat;
	width: 500px;
	height: 450px;
}

div.demotime.beatles div {
	left: 30px;
}

div.demotime.lebowski {
	background: #fff url(images/lebowski.gif) 50% 50% no-repeat;
	width: 500px;
	height: 380px;
}

div.demotime.lebowski div {
	left: 170px;
}

div.demotime audio {
	position: absolute;
	bottom: 0;
	width: 300px;
	left: 250px;
	opacity: 0.25;
}

div.demotime audio:hover {
	opacity: 1;
}

div.demotime div {
	position: absolute;
	top: -30px;
	left: -30px;
	transform(rotateZ(-11deg));
	font-family: 'Oswald Regular', 'League Gothic', sans-serif;
	font-style: italic;
	font-weight: bold;
	font-size: 100px;
	text_shadow (5px 5px 1px SHADOW_COLOR);
}
